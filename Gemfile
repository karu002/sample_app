source 'https://rubygems.org'

# RAILS
gem 'rails', '3.2.12'

# DEVELOPMENT GEMS
group :development, :test do
	gem 'sqlite3'
	gem 'rspec-rails'
	gem 'capybara'
end

# HTML/CSS/JS
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

# JQUERY
gem 'jquery-rails'

# POSTGRESQL FOR HEROKU (i.e. production)
group :production do
	gem 'pg'
end
